<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.moviecatalog.ui.home.HomeFragment"
        android:label="@string/movies"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detailMovieFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.dicoding.moviecatalog.ui.detail.DetailMovieFragment"
        android:label="@string/detail_movie"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movie"
            app:argType="com.dicoding.moviecatalog.core.domain.model.Movie" />
    </fragment>

<!--    <include app:graph="@navigation/favorite_nav_graph" />-->
<!--    &lt;!&ndash; Include navigation graph dari dynamic feature module &ndash;&gt;-->

</navigation>