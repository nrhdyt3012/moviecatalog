<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.moviecatalog.ui.home.HomeFragment"
        android:label="@string/movies"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detailMovieFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.dicoding.moviecatalog.ui.detail.DetailMovieFragment"
        android:label="@string/detail_movie"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movie"
            app:argType="com.dicoding.moviecatalog.core.domain.model.Movie" />
    </fragment>

    <!-- Dynamic Feature: Favorite Fragment -->
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dicoding.moviecatalog.favorite.FavoriteFragment"
        android:label="@string/favorite_movies"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favorite_to_detail"
            app:destination="@id/detailMovieFragment" />
    </fragment>

</navigation>