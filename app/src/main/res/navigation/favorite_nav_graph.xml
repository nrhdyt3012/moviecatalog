<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_nav_graph"
    app:startDestination="@id/favoriteFragment">

    <!-- Fragment dari dynamic feature module -->
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dicoding.moviecatalog.favorite.FavoriteFragment"
        android:label="@string/favorite_movies"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favorite_to_detail"
            app:destination="@id/detailMovieFragment" />
    </fragment>

    <!-- Fragment detail yang sudah ada di app module -->
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.dicoding.moviecatalog.ui.detail.DetailMovieFragment"
        android:label="@string/detail_movie"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movie"
            app:argType="com.dicoding.moviecatalog.core.domain.model.Movie" />
    </fragment>

</navigation>
